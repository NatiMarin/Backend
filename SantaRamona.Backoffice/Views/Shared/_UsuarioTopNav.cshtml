@* Detecta el controller actual para marcar la pestaña activa *@
@{
    var ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    string Active(string name) => ctrl == name.ToLowerInvariant() ? "active" : "";
}

<div class="container mt-3 sr-topnav">
    <div class="d-flex align-items-center gap-3 flex-wrap">
        <!-- 🔙 Volver al menú -->
        <a href="@Url.Action("Index", "Home")" class="sr-backlink text-decoration-none">
            <span class="me-1">←</span> Volver al menú
        </a>

        <!-- 🧭 Pestañas del módulo Usuario -->
        <ul class="nav nav-pills gap-2 flex-wrap mb-0">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Usuario")" class="nav-link @Active("Usuario")">Usuarios</a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "EstadoUsuario")" class="nav-link @Active("EstadoUsuario")">Estados</a>
            </li>
        </ul>
    </div>
</div>

<style>
    /* 🌿 Estilo general del topnav */
    .sr-topnav {
        font-family: 'Segoe UI', sans-serif;
    }

        /* Botón "Volver al menú" con estilo turquesa */
        .sr-topnav .sr-backlink {
            background: #fff;
            color: #40ADB0;
            border: 1px solid #40ADB0;
            border-radius: 12px;
            padding: .45rem 1rem;
            display: inline-flex;
            align-items: center;
            transition: all .2s ease-in-out;
        }

            .sr-topnav .sr-backlink:hover {
                background: #E6F6F5;
                color: #155e59;
                text-decoration: none;
            }

        /* Pestañas principales */
        .sr-topnav .nav-link {
            background: #fff;
            color: #40ADB0;
            border: 1px solid #40ADB0;
            border-radius: 12px;
            padding: .45rem 1rem;
            font-weight: 500;
            transition: all .2s ease-in-out;
        }

            .sr-topnav .nav-link:hover {
                background: #E6F6F5;
                color: #155e59;
            }

            .sr-topnav .nav-link.active {
                background: #40ADB0 !important;
                color: #fff !important;
                border-color: #40ADB0 !important;
                font-weight: 600;
            }

            .sr-topnav .nav-link:focus {
                box-shadow: 0 0 0 .15rem rgba(64,173,176,.25);
            }
</style>
