@model SantaRamona.Backoffice.Models.Usuario

@{
    ViewData["Title"] = "Detalle de usuario";
    var estados = ViewBag.Estados as Dictionary<int, string> ?? new();
    string Txt(Dictionary<int, string> d, int id) => d.TryGetValue(id, out var v) ? v : $"#{id}";
    Layout = null; // ✅ Desactiva el layout para uso dentro de modal
}

<div class="container-fluid" style="font-family: Helvetica, Arial, sans-serif;">
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Código</label>
            <input class="form-control" value="@Model.id_usuario" readonly />
        </div>
        <div class="col-md-4">
            <label class="form-label fw-semibold">Estado</label>
            <select class="form-select" disabled style="background:#fff; color:#000;">
                <option value="">-- Seleccione un estado --</option>
                @foreach (var e in (ViewBag.Estados as Dictionary<int, string> ?? new()))
                {
                    <option value="@e.Key" selected="@(Model.id_estadoUsuario == e.Key)">
                        @e.Value
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label fw-semibold">Fecha de Alta</label>
            <input class="form-control" value="@Model.fechaAlta.ToString("dd/MM/yyyy")" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">Nombre</label>
            <input class="form-control" value="@Model.nombre" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label fw-semibold">Apellido</label>
            <input class="form-control" value="@Model.apellido" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">Email</label>
            <input class="form-control" value="@Model.email" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label fw-semibold">Clave</label>
            <input type="password" class="form-control" value="@Model.clave" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">Dirección</label>
            <input class="form-control" value="@Model.direccion" readonly />
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Altura</label>
            <input class="form-control" value="@Model.altura" readonly />
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Departamento</label>
            <input class="form-control" value="@Model.departamento" readonly />
        </div>

        <div class="col-md-6">
            <label class="form-label fw-semibold">Teléfono 1</label>
            <input class="form-control" value="@Model.telefono1" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label fw-semibold">Teléfono 2</label>
            <input class="form-control" value="@Model.telefono2" readonly />
        </div>
    </div>
</div>

<style>
    select option:hover {
        background-color: #FFE3E3 !important;
    }
</style>
