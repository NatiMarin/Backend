@model IEnumerable<SantaRamona.Backoffice.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
    var estados = ViewBag.Estados as Dictionary<int, string> ?? new();
    string Txt(Dictionary<int, string> d, int id) => d.TryGetValue(id, out var v) ? v : $"#{id}";
}
@await Html.PartialAsync("_UsuarioTopNav")

<link rel="stylesheet" href="~/css/estilos-backoffice.css" />

<div class="main-container">
    <h1 class="table-title">Lista de Usuarios</h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #40ADB0; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <div class="d-flex justify-content-end mt-3">
        <a asp-controller="Usuario" asp-action="Crear" class="btn-crear">+ Agregar Nuevo Usuario</a>
    </div>

    <div class="card shadow-sm mt-3" style="border:1px solid #40ADB0; border-radius:14px;">
        <div class="card-body p-0">
            <table class="styled-table mb-0">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_usuario</td>
                                <td>@item.nombre</td>
                                <td>@item.apellido</td>
                                <td>@item.email</td>
                                <td>@Txt(estados, item.id_estadoUsuario)</td>

                                <td class="action-buttons">
                                    <!-- VER: armamos href real y lo abrimos en modal -->
                                    <a asp-controller="Usuario" asp-action="Detalle"
                                       asp-route-id="@item.id_usuario"
                                       asp-route-id_usuario="@item.id_usuario"
                                       data-modal="true"
                                       class="btn-detalle">Ver</a>

                                    <!-- MODIFICAR: cubrimos id e id_usuario -->
                                    <a asp-controller="Usuario" asp-action="Modificar"
                                       asp-route-id="@item.id_usuario"
                                       asp-route-id_usuario="@item.id_usuario"
                                       class="btn-editar">Modificar</a>

                                    <!-- ELIMINAR: misma lógica que Animales -->
                                    <a asp-controller="Usuario" asp-action="Eliminar"
                                       asp-route-id="@item.id_usuario"
                                       asp-route-id_usuario="@item.id_usuario"
                                       class="btn-eliminar">Eliminar</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted p-4">No hay usuarios cargados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal Detalle -->
    <div class="modal fade" id="modalDetalle" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content" style="border-radius:14px;">
                <div class="modal-header" style="background:#40ADB0; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
                    <h5 class="modal-title">Detalle del usuario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body" id="modalDetalleBody"></div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            // Abrir "Ver" en modal, pero si JS no carga, el link navega igual (fallback)
            document.addEventListener('click', async (ev) => {
                const a = ev.target.closest('a[data-modal="true"]');
                if (!a) return;

                ev.preventDefault();
                try {
                    const resp = await fetch(a.href, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                    const html = await resp.text();
                    if (!resp.ok) throw new Error(html || `HTTP ${resp.status}`);

                    document.getElementById('modalDetalleBody').innerHTML = html;
                    new bootstrap.Modal(document.getElementById('modalDetalle')).show();
                } catch (err) {
                    console.error(err);
                    // fallback: si hay error, navegamos al detalle normal
                    window.location.href = a.href;
                }
            });
        </script>
    }
</div>
