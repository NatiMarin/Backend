@model SantaRamona.Backoffice.Models.Usuario
@{
    ViewData["Title"] = "Eliminar usuario";
    bool bloqueado = (ViewBag.EnUso as bool?) ?? false;
    string motivo = ViewBag.Motivo as string ?? string.Empty;
    var estados = ViewBag.Estados as Dictionary<int, string> ?? new();
}

<div class="container mt-4" style="font-family: Helvetica, Arial, sans-serif;">
    <h1 class="text-center fw-bold" style="color:#40ADB0; letter-spacing:.5px;">
        ELIMINAR USUARIO
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" style="background:#E6F6F5; border:1px solid #40ADB0; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" style="background:#fff3f3; border:1px solid #A71A6C; color:#A71A6C; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #40ADB0; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#40ADB0; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <a asp-action="Index" class="btn"
               style="border:1px solid #fff; color:#fff; border-radius:10px;">← Volver al listado</a>

            <div class="d-flex gap-2">
                @if (!bloqueado)
                {
                    <button type="button" class="btn"
                            data-bs-toggle="modal" data-bs-target="#confirmEliminar"
                            style="background:#fff; color:#40ADB0; border-radius:10px; padding:.5rem 1.25rem;">
                        Eliminar
                    </button>
                }
                <a asp-action="Index" class="btn"
                   style="background:#fff; color:#40ADB0; border-radius:10px; padding:.5rem 1.25rem;">
                    Cancelar
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (bloqueado)
            {
                <div class="alert" style="background:#fff3f3; border:1px solid #A71A6C; color:#A71A6C; border-radius:10px;">
                    No se puede eliminar este usuario porque @motivo.
                    Podés corregir los datos desde <strong>Modificar</strong>.
                </div>
            }

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Código</label>
                    <input class="form-control" value="@Model.id_usuario" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" value="@($"{Model.nombre} {Model.apellido}")" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="@Model.email" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Estado</label>
                    @{
                        var estado = ViewBag.Estados as Dictionary<int, string> ?? new();
                        string estadoTexto = estado.ContainsKey(Model.id_estadoUsuario)
                        ? estado[Model.id_estadoUsuario]
                        : $"#{Model.id_estadoUsuario}";
                    }
                    <input class="form-control" value="@estadoTexto" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Teléfono 1</label>
                    <input class="form-control" value="@Model.telefono1" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Teléfono 2</label>
                    <input class="form-control" value="@Model.telefono2" readonly />
                </div>
            </div>
        </div>
    </div>

    @if (!bloqueado)
    {
        <div class="modal fade" id="confirmEliminar" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="border-radius:14px;">
                    <div class="modal-header" style="background:#40ADB0; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
                        <h5 class="modal-title">Confirmar eliminación</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        ¿Realmente desea eliminar este usuario?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn"
                                data-bs-dismiss="modal"
                                style="border:1px solid #40ADB0; color:#40ADB0; border-radius:10px;">
                            No
                        </button>

                        <form asp-action="Eliminar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.id_usuario" />
                            <button type="submit" class="btn"
                                    style="background:#40ADB0; color:#fff; border-radius:10px;">
                                Sí, eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
