@model SantaRamona.Backoffice.Models.Pension
@{
    ViewData["Title"] = "Agregar Nueva Pensión";
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        AGREGAR NUEVA PENSIÓN
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <a asp-action="Index" class="btn"
               style="border:1px solid #fff; color:#fff; border-radius:10px;">← Volver al listado</a>
            <div class="d-flex gap-2">
                <button type="submit" form="frm-crear" class="btn"
                        style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.5rem 1.25rem;">
                    Guardar
                </button>
                <button type="button" class="btn"
                        onclick="document.getElementById('modal-cancelar').style.display='block'"
                        style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.5rem 1.25rem;">
                    Cancelar
                </button>
            </div>
        </div>

        <div class="card-body">
            <form id="frm-crear" asp-action="Crear" method="post">
                @Html.AntiForgeryToken()
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="email" class="form-label">Email</label>
                        <input asp-for="email" class="form-control" type="email" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="telefono" class="form-label">Teléfono</label>
                        <!-- Si en tu modelo MVC teléfono es string, dejá type="text". Si es int, podés usar este input text numérico -->
                        <input asp-for="telefono" class="form-control" type="text"
                               inputmode="numeric" pattern="\d*"
                               oninput="this.value=this.value.replace(/[^0-9]/g,'')" />
                        <span asp-validation-for="telefono" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="redesSociales" class="form-label">Redes sociales</label>
                        <input asp-for="redesSociales" class="form-control" />
                        <span asp-validation-for="redesSociales" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="calle" class="form-label">Calle</label>
                        <input asp-for="calle" class="form-control" />
                        <span asp-validation-for="calle" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="altura" class="form-label">Altura</label>
                        <input asp-for="altura" class="form-control" />
                        <span asp-validation-for="altura" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="pisoCasa" class="form-label">Piso / Casa</label>
                        <input asp-for="pisoCasa" class="form-control" />
                        <span asp-validation-for="pisoCasa" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="departamento" class="form-label">Departamento</label>
                        <input asp-for="departamento" class="form-control" />
                        <span asp-validation-for="departamento" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="barrio" class="form-label">Barrio</label>
                        <input asp-for="barrio" class="form-control" />
                        <span asp-validation-for="barrio" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="montoDia" class="form-label">Monto por día</label>
                        <input asp-for="montoDia" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="montoDia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="fechaIngreso" class="form-label">Fecha de ingreso</label>
                        <input asp-for="fechaIngreso" class="form-control" type="date" />
                        <span asp-validation-for="fechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="fechaEgreso" class="form-label">Fecha de egreso</label>
                        <input asp-for="fechaEgreso" class="form-control" type="date" />
                        <span asp-validation-for="fechaEgreso" class="text-danger"></span>
                    </div>

                    <!-- Si corresponde setear el usuario desde sesión, dejalo hidden o quitalo del form -->
                    <input type="hidden" asp-for="id_usuario" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Confirmar Cancelar -->
<div id="modal-cancelar" style="display:none; position:fixed; inset:0; background:rgba(0,0,0,0.4); z-index:9999;">
    <div style="background:#fff; width:380px; max-width:90%; margin:10% auto; padding:2rem; border-radius:1rem; box-shadow:0 6px 12px rgba(0,0,0,0.25); text-align:center;">
        <p style="font-size:1.1rem; color:#333; font-weight:600; margin-bottom:1.2rem;">
            ¿Realmente desea cancelar?
        </p>
        <div style="display:flex; justify-content:center; gap:.6rem;">
            <a asp-action="Index" class="btn" style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.4rem 1rem;">Sí</a>
            <button type="button" class="btn" onclick="document.getElementById('modal-cancelar').style.display='none'"
                    style="background:#e0e0e0; color:#333; border-radius:10px; padding:.4rem 1rem;">
                No
            </button>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
