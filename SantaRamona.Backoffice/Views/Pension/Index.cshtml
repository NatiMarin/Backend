@model IEnumerable<SantaRamona.Backoffice.Models.Pension>
@{
    // Si tenés un top nav específico, descomentá:
    // await Html.RenderPartialAsync("_PensionTopNav");

    ViewData["Title"] = "Lista de Pensiones";

    string Str(string? s) => string.IsNullOrWhiteSpace(s) ? "—" : s!;
    string Tel(object? t) => (t == null) ? "—" : t.ToString();
    string Money(decimal m) => m.ToString("C"); // usa cultura del servidor
    string Fecha(DateTime? d) => (d == null || d == default) ? "—" : d.Value.ToString("dd/MM/yyyy");
    string Dir(SantaRamona.Backoffice.Models.Pension p)
    {
        var partes = new[]{
            p.calle,
            p.altura,
            p.pisoCasa,
            p.departamento,
            p.barrio
        }.Where(x => !string.IsNullOrWhiteSpace(x));
        return partes.Any() ? string.Join(" ", partes!) : "—";
    }
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        LISTA DE PENSIONES
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <!-- Botón afuera del card, alineado a la derecha -->
    <div class="d-flex justify-content-end mt-3">
        <a asp-action="Crear" class="btn"
           style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.5rem 1.25rem;">
            Agregar Nueva Pensión
        </a>
    </div>

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead>
                    <tr style="background:#2FA8A2; color:#fff;">
                        <th style="border-top-left-radius:10px;">Código</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Dirección</th>
                        <th>Monto/día</th>
                        <th>Ingreso</th>
                        <th class="text-end" style="border-top-right-radius:10px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_pension</td>
                                <td>@Str(item.nombre)</td>
                                <td>@Tel(item.telefono)</td>
                                <td>@Str(item.email)</td>
                                <td>@Dir(item)</td>
                                <td>@Money(item.montoDia)</td>
                                <td>@Fecha(item.fechaIngreso)</td>
                                <td class="text-end">
                                    <a href="javascript:void(0)" data-ver-pension="@item.id_pension"
                                       class="btn btn-sm"
                                       style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.35rem .8rem; margin-right:.25rem;">
                                        Ver
                                    </a>

                                    <a asp-action="Modificar" asp-route-id="@item.id_pension"
                                       class="btn btn-sm"
                                       style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.35rem .8rem; margin-right:.25rem;">
                                        Modificar
                                    </a>

                                    <a asp-action="Eliminar" asp-route-id="@item.id_pension"
                                       class="btn btn-sm"
                                       style="background:#A71A6C; color:#fff; border-radius:10px; padding:.35rem .8rem;">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted p-4">No hay pensiones cargadas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal Detalle -->
    <div class="modal fade" id="modalDetallePension" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content" style="border-radius:14px;">
                <div class="modal-header" style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
                    <h5 class="modal-title">Detalle de la pensión</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body" id="modalDetallePensionBody">
                    <!-- El partial _DetallePension se carga acá -->
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            (() => {
              // Url base generada por MVC (ej: /Pension/Detalle)
              const baseUrl = '@Url.Action("Detalle", "Pension")';

              document.addEventListener('click', async (ev) => {
                const btn = ev.target.closest('[data-ver-pension]');
                if (!btn) return;

                const id = btn.getAttribute('data-ver-pension');

                try {
                  const resp = await fetch(`${baseUrl}/${id}`, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                  });

                  const html = await resp.text();
                  if (!resp.ok) throw new Error(html || `HTTP ${resp.status}`);

                  document.getElementById('modalDetallePensionBody').innerHTML = html;

                  const modal = new bootstrap.Modal(document.getElementById('modalDetallePension'));
                  modal.show();
                } catch (err) {
                  console.error(err);
                  alert('No se pudo cargar el detalle de la pensión.');
                }
              });
            })();
        </script>
    }
</div>
