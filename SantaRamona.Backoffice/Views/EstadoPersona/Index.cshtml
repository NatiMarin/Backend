@model IEnumerable<SantaRamona.Backoffice.Models.Estado_Persona>
@{
    // Si tenés el top-nav de Personas, úsalo (puedes quitar esta línea si no existe)
    await Html.RenderPartialAsync("_PersonaTopNav");
    ViewData["Title"] = "Estados de Persona";
}

<style>
    .main-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: 'Segoe UI',sans-serif
    }

    .form-title {
        text-align: center;
        color: #40ADB0;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase
    }

    .styled-table {
        border-collapse: collapse;
        width: 100%;
        background: #fff;
        border: 2px solid #40ADB0;
        border-radius: .5rem;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,.1)
    }

        .styled-table th {
            background: #40ADB0;
            color: #fff;
            padding: 1rem
        }

        .styled-table td {
            padding: 1rem;
            border-top: 1px solid #e0e0e0
        }

        .styled-table tr:nth-child(even) {
            background: #f9f9f9
        }

    .btn-primary, .btn-danger {
        background: #40ADB0;
        color: #fff;
        padding: .5rem 1rem;
        font-size: 1rem;
        border: none;
        border-radius: .5rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color .3s;
        display: inline-block
    }

        .btn-primary:hover, .btn-danger:hover {
            background: #2e888b;
            color: #fff
        }

    .actions-cell {
        text-align: center;
        white-space: nowrap
    }

    .actions {
        display: inline-flex;
        gap: .5rem
    }

    .summary-errors {
        color: #d9534f;
        font-weight: 600;
        margin-bottom: 1rem
    }

    .toolbar {
        display: flex;
        justify-content: flex-end;
        margin: 1rem 0
    }
</style>

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        LISTA DE ESTADOS DE PERSONAS
    </h1>

    @* Mensajes *@
    @if (TempData["Ok"] != null)
    {
        <div style="margin:.8rem 0; padding:.6rem; border:2px solid #40ADB0; background:#EAF6F6; border-radius:.5rem;">
            @TempData["Ok"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div style="margin:.8rem 0; padding:.6rem; border:2px solid #ff6b6b; background:#ffecec; border-radius:.5rem;">
            <strong>@TempData["Error"]</strong>
            @if (TempData["ApiDetail"] != null)
            {
                <div style="margin-top:.4rem; color:#555; white-space:pre-wrap;">@TempData["ApiDetail"]</div>
            }
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="summary-errors">@ViewBag.ApiError</div>
    }

    <div class="toolbar">
        <a asp-controller="EstadoPersona" asp-action="Crear" class="btn-primary">Agregar Nuevo Estado</a>
    </div>

    @if (Model?.Any() == true)
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th style="text-align:left;">Código</th>
                    <th style="text-align:left;">Descripción</th>
                    <th style="text-align:center; width:220px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id_estadoPersona</td>
                        <td>@item.descripcion</td>
                        <td class="actions-cell">
                            <div class="actions">
                                <a asp-controller="EstadoPersona"
                                   asp-action="Modificar"
                                   asp-route-id="@item.id_estadoPersona"
                                   class="btn-primary">
                                    Modificar
                                </a>

                                @* Ir a la confirmación GET /EstadoPersona/Eliminar/{id} *@
                                <a asp-controller="EstadoPersona"
                                   asp-action="Eliminar"
                                   asp-route-id="@item.id_estadoPersona"
                                   class="btn-danger">
                                    Eliminar
                                </a>

                                @* Si quisieras eliminar directo desde la tabla:
                            <form asp-controller="EstadoPersona" asp-action="Eliminar" asp-route-id="@item.id_estadoPersona"
                                  method="post" style="display:inline;"
                                  onsubmit="return confirm('¿Realmente desea eliminar este estado?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-danger">Eliminar</button>
                            </form>
                            *@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color:#666;">No hay estados cargados.</p>
    }
</div>

