@model IEnumerable<SantaRamona.Backoffice.Models.Formulario>
@{
    await Html.RenderPartialAsync("_FormularioTopNav");
}


@{
    ViewData["Title"] = "Formularios";

    // Mapas id -> texto que manda el controller
    var tipos = (IDictionary<int, string>)(ViewBag.TiposMap ?? new Dictionary<int, string>());
    var estados = (IDictionary<int, string>)(ViewBag.EstadosMap ?? new Dictionary<int, string>());
    var personas = (IDictionary<int, string>)(ViewBag.PersonasMap ?? new Dictionary<int, string>());
    var usuarios = (IDictionary<int, string>)(ViewBag.UsuariosMap ?? new Dictionary<int, string>());
}

<style>
    .main-container {
        max-width: 1100px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-title {
        text-align: center;
        color: #40ADB0;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
    }

    .styled-table {
        border-collapse: collapse;
        width: 100%;
        background-color: #fff;
        border: 2px solid #40ADB0;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .styled-table th {
            background-color: #40ADB0;
            color: white;
            padding: 1rem;
        }

        .styled-table td {
            padding: 0.85rem 1rem;
            border-top: 1px solid #e0e0e0;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    /* Botones (igual que Especie) */
    .btn-primary, .btn-danger {
        background-color: #40ADB0;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s;
        display: inline-block;
    }

        .btn-primary:hover, .btn-danger:hover {
            background-color: #2e888b;
            color: white;
        }

    .actions-cell {
        text-align: center;
        white-space: nowrap;
    }

    .actions {
        display: inline-flex;
        gap: 0.5rem;
    }

    .summary-errors {
        color: #d9534f;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .toolbar {
        display: flex;
        justify-content: flex-end;
        margin: 1rem 0;
    }
</style>

<div class="main-container">
    <h2 class="form-title">Lista de Formularios</h2>

    @* Mensajes (mismo patrón que Especie) *@
    @if (TempData["Ok"] != null)
    {
        <div style="margin:.8rem 0; padding:.6rem; border:2px solid #40ADB0; background:#EAF6F6; border-radius:.5rem;">
            @TempData["Ok"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div style="margin:.8rem 0; padding:.6rem; border:2px solid #ff6b6b; background:#ffecec; border-radius:.5rem;">
            <strong>@TempData["Error"]</strong>
            @if (TempData["ApiDetail"] != null)
            {
                <div style="margin-top:.4rem; color:#555; white-space:pre-wrap;">@TempData["ApiDetail"]</div>
            }
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="summary-errors">@ViewBag.ApiError</div>
    }

    <div class="toolbar">
        <a asp-controller="Formulario" asp-action="Crear" class="btn-primary">Agregar Nuevo Formulario</a>
    </div>

    @if (Model?.Any() == true)
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th style="text-align:left;">Código</th>
                    <th style="text-align:left;">Persona</th>
                    <th style="text-align:left;">Tipo</th>
                    <th style="text-align:left;">Fecha Alta</th>
                    <th style="text-align:left;">Usuario</th>
                    <th style="text-align:left;">Estado</th>
                    <th style="text-align:center; width: 240px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var personaDesc = personas.TryGetValue(item.id_persona, out var ptxt)
                    ? ptxt
                    : $"Persona #{item.id_persona}";
                    var tipoDesc = tipos.TryGetValue(item.id_tipoFormulario, out var ttxt)
                    ? ttxt
                    : $"Tipo #{item.id_tipoFormulario}";
                    var estadoDesc = estados.TryGetValue(item.id_estadoFormulario, out var etxt)
                    ? etxt
                    : $"Estado #{item.id_estadoFormulario}";
                    var usuarioDesc = item.id_usuario.HasValue
                    ? (usuarios.TryGetValue(item.id_usuario.Value, out var utxt) ? utxt : $"Usuario #{item.id_usuario.Value}")
                    : "-";
                    var fechaTxt = item.fechaAltaFormulario.ToString("dd/MM/yyyy HH:mm");

                    <tr>
                        <td>@item.id_formulario</td>
                        <td>@personaDesc</td>
                        <td>@tipoDesc</td>
                        <td>@fechaTxt</td>
                        <td>@usuarioDesc</td>
                        <td>@estadoDesc</td>
                        <td class="actions-cell">
                            <div class="actions">
                                <a asp-controller="Formulario"
                                   asp-action="Modificar"
                                   asp-route-id="@item.id_formulario"
                                   class="btn-primary">
                                    Modificar
                                </a>

                                <a asp-controller="Formulario"
                                   asp-action="Eliminar"
                                   asp-route-id="@item.id_formulario"
                                   class="btn-primary">
                                    Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: #666;">No hay formularios cargados.</p>
    }
</div>
