@model SantaRamona.Backoffice.Models.Persona
@{
    ViewData["Title"] = "Eliminar persona";

    var estados = ViewBag.Estados as Dictionary<int, string> ?? new();

    string EstadoTxt(int id) => estados.TryGetValue(id, out var v) ? v : $"#{id}";
    string Dato(string? s) => string.IsNullOrWhiteSpace(s) ? "-" : s;
    string Fecha(DateTime? f) => f.HasValue ? f.Value.ToString("yyyy-MM-dd") : "-";

    bool bloqueado = (ViewBag.Bloqueado as bool?) ?? false; // si el controller decide bloquear
    string motivo = ViewBag.Motivo as string ?? string.Empty;
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        ELIMINAR PERSONA
    </h1>

    @* Mensajes *@
    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.Error
            @if (TempData["ApiDetail"] is string det && !string.IsNullOrWhiteSpace(det))
            {
                <div class="small mt-1 text-muted">@det</div>
            }
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <a asp-action="Index" class="btn"
               style="border:1px solid #fff; color:#fff; border-radius:10px;">← Volver al listado</a>

            <div class="d-flex gap-2">
                @if (!bloqueado)
                {
                    <button type="button" class="btn"
                            data-bs-toggle="modal" data-bs-target="#confirmEliminar"
                            style="background:#fff; color:#2FA8A2; border-radius:10px; padding:.5rem 1.25rem;">
                        Eliminar
                    </button>
                }
                <a asp-action="Index" class="btn"
                   style="background:#fff; color:#2FA8A2; border-radius:10px; padding:.5rem 1.25rem;">Cancelar</a>
            </div>
        </div>

        <div class="card-body">
            @if (bloqueado)
            {
                <div class="alert" role="alert"
                     style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
                    No se puede eliminar esta persona porque @motivo.
                    Podés corregir los datos desde <strong>Modificar</strong>.
                </div>
            }

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Identificación</label>
                    <input class="form-control" value="@Model.id_persona" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" value="@Dato(Model.nombre)" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Apellido</label>
                    <input class="form-control" value="@Dato(Model.apellido)" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">DNI</label>
                    <input class="form-control" value="@Model.dni" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha nacimiento</label>
                    <input class="form-control" value="@(Model.fechaNacimiento.ToString("yyyy-MM-dd"))" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="@Dato(Model.email)" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Calle</label>
                    <input class="form-control" value="@Dato(Model.calle)" readonly />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Altura</label>
                    <input class="form-control" value="@(Model.altura.HasValue ? Model.altura.Value.ToString() : "-")" readonly />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Depto.</label>
                    <input class="form-control" value="@Dato(Model.departamento)" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Barrio</label>
                    <input class="form-control" value="@Dato(Model.barrio)" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Partido</label>
                    <input class="form-control" value="@Dato(Model.partido)" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Provincia</label>
                    <input class="form-control" value="@Dato(Model.provincia)" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Estado</label>
                    <input class="form-control" value="@EstadoTxt(Model.id_estadoPersona)" readonly />
                </div>

                <div class="col-12">
                    <label class="form-label">Redes sociales</label>
                    <input class="form-control" value="@Dato(Model.redesSociales)" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Fecha ingreso</label>
                    <input class="form-control" value="@(Model.fechaIngreso.ToString("yyyy-MM-dd"))" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Fecha egreso</label>
                    <input class="form-control" value="@Fecha(Model.fechaEgreso)" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Motivo egreso</label>
                    <input class="form-control" value="@Dato(Model.motivoEgreso)" readonly />
                </div>
            </div>
        </div>
    </div>

    @if (!bloqueado)
    {
        <!-- Modal de confirmación -->
        <div class="modal fade" id="confirmEliminar" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="border-radius:14px;">
                    <div class="modal-header" style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
                        <h5 class="modal-title">Confirmar eliminación</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        ¿Realmente desea eliminar esta persona?
                    </div>
                    <div class="modal-footer" style="border-top:none;">
                        <form asp-action="Eliminar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.id_persona" />
                            <button type="submit" class="btn"
                                    style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.4rem 1rem;">
                                Sí, eliminar
                            </button>
                        </form>

                        <button type="button" class="btn" data-bs-dismiss="modal"
                                style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.4rem 1rem;">
                            No
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
