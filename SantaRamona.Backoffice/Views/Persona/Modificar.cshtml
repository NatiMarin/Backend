@model SantaRamona.Backoffice.Models.Persona
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Modificar persona";

    // Si el controller pasó un Dictionary<int,string>:
    var estadosDict = ViewBag.Estados as Dictionary<int, string> ?? new();
    var estadosSL = new SelectList(estadosDict, "Key", "Value", Model?.id_estadoPersona);
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        MODIFICAR PERSONA
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <a asp-action="Index" class="btn"
               style="border:1px solid #fff; color:#fff; border-radius:10px;">← Volver al listado</a>
            <div class="d-flex gap-2">
                <button type="submit" form="form-modificar" class="btn"
                        style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.5rem 1.25rem;">
                    Guardar
                </button>
                <a asp-action="Index" class="btn"
                   style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.5rem 1.25rem;">
                    Cancelar
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- SOLO UN FORM -->
            <form id="form-modificar" asp-action="Modificar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="id_persona" /> <!-- OBLIGATORIO -->

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="apellido" class="form-label">Apellido</label>
                        <input asp-for="apellido" class="form-control" />
                        <span asp-validation-for="apellido" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="dni" class="form-label">DNI</label>
                        <input asp-for="dni" class="form-control" type="number" min="0" />
                        <span asp-validation-for="dni" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="fechaNacimiento" class="form-label">Fecha de nacimiento</label>
                        <input asp-for="fechaNacimiento" class="form-control" type="date" />
                        <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="email" class="form-label">Email</label>
                        <input asp-for="email" class="form-control" type="email" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="calle" class="form-label">Calle</label>
                        <input asp-for="calle" class="form-control" />
                        <span asp-validation-for="calle" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="altura" class="form-label">Altura</label>
                        <input asp-for="altura" class="form-control" type="number" min="0" step="1" inputmode="numeric" />
                        <span asp-validation-for="altura" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="departamento" class="form-label">Departamento</label>
                        <input asp-for="departamento" class="form-control" />
                        <span asp-validation-for="departamento" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="barrio" class="form-label">Barrio</label>
                        <input asp-for="barrio" class="form-control" />
                        <span asp-validation-for="barrio" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="partido" class="form-label">Partido</label>
                        <input asp-for="partido" class="form-control" />
                        <span asp-validation-for="partido" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="provincia" class="form-label">Provincia</label>
                        <input asp-for="provincia" class="form-control" />
                        <span asp-validation-for="provincia" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="redesSociales" class="form-label">Redes sociales</label>
                        <input asp-for="redesSociales" class="form-control" />
                        <span asp-validation-for="redesSociales" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="fechaIngreso" class="form-label">Fecha de ingreso</label>
                        <input asp-for="fechaIngreso" class="form-control" type="date" />
                        <span asp-validation-for="fechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="fechaEgreso" class="form-label">Fecha de egreso</label>
                        <input asp-for="fechaEgreso" class="form-control" type="date" />
                        <span asp-validation-for="fechaEgreso" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="motivoEgreso" class="form-label">Motivo de egreso</label>
                        <input asp-for="motivoEgreso" class="form-control" />
                        <span asp-validation-for="motivoEgreso" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <select asp-for="id_estadoPersona" class="form-select" asp-items="estadosSL"></select>
                        <span asp-validation-for="id_estadoPersona" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
