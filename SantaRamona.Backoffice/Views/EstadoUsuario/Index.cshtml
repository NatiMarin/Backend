@model IEnumerable<SantaRamona.Backoffice.Models.Estado_Usuario>

@{

    ViewData["Title"] = "Estados de Usuario";
}
@await Html.PartialAsync("_UsuarioTopNav")

<link rel="stylesheet" href="~/css/estilos-backoffice.css" />
<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#40ADB0; letter-spacing:.5px;">
        LISTA DE ESTADOS DE USUARIO
    </h1>

    <!-- ✅ Mensajes de confirmación o error -->
    @if (TempData["Ok"] != null)
    {
        <div class="alert mt-3" style="background:#E6F6F5; border:1px solid #40ADB0; color:#155e59; border-radius:10px;">
            @TempData["Ok"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert mt-3" style="background:#FFE3E3; border:1px solid #A71A6C; color:#A71A6C; border-radius:10px;">
            @TempData["Error"]
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" style="background:#FFE3E3; border:1px solid #A71A6C; color:#A71A6C; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <!-- Botón agregar -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Crear" class="btn"
           style="background:#40ADB0; color:#fff; border-radius:10px; padding:.45rem 1rem;">
            + Agregar nuevo estado
        </a>
    </div>

    <!-- Tabla -->
    @if (Model?.Any() == true)
    {
        <div class="card shadow-sm" style="border:1px solid #40ADB0; border-radius:14px;">
            <div class="card-body p-0">
                <table class="table align-middle mb-0">
                    <thead style="background:#40ADB0; color:#fff;">
                        <tr>
                            <th style="width:120px;">Código</th>
                            <th>Descripción</th>
                            <th class="text-end" style="width:240px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_estadoUsuario</td>
                                <td>@item.descripcion</td>
                                <td class="text-end">
                                    <a asp-action="Modificar" asp-route-id="@item.id_estadoUsuario"
                                       class="btn btn-sm"
                                       style="background:#40ADB0; color:#fff; border-radius:10px; padding:.35rem .9rem;">
                                        Modificar
                                    </a>

                                    <a asp-action="Eliminar" asp-route-id="@item.id_estadoUsuario"
                                       class="btn btn-sm"
                                       style="background:#A71A6C; color:#fff; border-radius:10px; padding:.35rem .9rem; margin-left:.25rem;">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p class="text-center text-muted mt-3">No hay estados cargados.</p>
    }
</div>