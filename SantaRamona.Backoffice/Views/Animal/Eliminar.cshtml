@model SantaRamona.Backoffice.Models.Animal
@{
    ViewData["Title"] = "Eliminar animal";

    var especies = ViewBag.Especies as Dictionary<int, string> ?? new();
    var razas = ViewBag.Razas as Dictionary<int, string> ?? new();
    var tamanos = ViewBag.Tamanos as Dictionary<int, string> ?? new();
    var estados = ViewBag.Estados as Dictionary<int, string> ?? new();

    string Txt(Dictionary<int, string> d, int id) => d.TryGetValue(id, out var v) ? v : $"#{id}";

    bool bloqueado = (ViewBag.Bloqueado as bool?) ?? false;
    string motivo = ViewBag.Motivo as string ?? string.Empty;
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        ELIMINAR ANIMAL
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.Error
            @if (TempData["ApiDetail"] is string det && !string.IsNullOrWhiteSpace(det))
            {
                <div class="small mt-1 text-muted">@det</div>
            }
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <a asp-action="Index" class="btn"
               style="border:1px solid #fff; color:#fff; border-radius:10px;">← Volver al listado</a>

            <div class="d-flex gap-2">
                @if (!bloqueado)
                {
                    <button type="button" class="btn"
                            data-bs-toggle="modal" data-bs-target="#confirmEliminar"
                            style="background:#fff; color:#2FA8A2; border-radius:10px; padding:.5rem 1.25rem;">
                        Eliminar
                    </button>
                }
                <a asp-action="Index" class="btn"
                   style="background:#fff; color:#2FA8A2; border-radius:10px; padding:.5rem 1.25rem;">Cancelar</a>
            </div>
        </div>

        <div class="card-body">
            @if (bloqueado)
            {
                <div class="alert" role="alert"
                     style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
                    No se puede eliminar este animal porque @motivo.
                    Podés corregir los datos desde <strong>Modificar</strong>.
                </div>
            }

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Identificación</label>
                    <input class="form-control" value="@Model.id_animal" readonly />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" value="@Model.nombre" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Edad</label>
                    <input class="form-control" value="@($"{Model.edad} {(Model.edad == 1 ? "año" : "años")}")" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Estado</label>
                    <input class="form-control" value="@Txt(estados, Model.id_estadoAnimal)" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Tamaño</label>
                    <input class="form-control" value="@Txt(tamanos, Model.id_tamano)" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Especie</label>
                    <input class="form-control" value="@Txt(especies, Model.id_especie)" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Raza</label>
                    <input class="form-control" value="@Txt(razas, Model.id_raza)" readonly />
                </div>

                <div class="col-12">
                    <label class="form-label">Historia</label>
                    <textarea class="form-control" rows="3" readonly>@Model.historia</textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Persona</label>
                    <input class="form-control" value="@(Model.id_persona.HasValue ? $"#{Model.id_persona}" : "")" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Pensión</label>
                    <input class="form-control" value="@(Model.id_pension.HasValue ? $"#{Model.id_pension}" : "")" readonly />
                </div>
            </div>
        </div>
    </div>

    @if (!bloqueado)
    {
        <!-- Modal de confirmación -->
        <div class="modal fade" id="confirmEliminar" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="border-radius:14px;">
                    <div class="modal-header" style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
                        <h5 class="modal-title">Confirmar eliminación</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        ¿Realmente desea eliminar este animal?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn"
                                data-bs-dismiss="modal"
                                style="border:1px solid #2FA8A2; color:#2FA8A2; border-radius:10px;">
                            No
                        </button>

                        <form asp-action="Eliminar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.id_animal" />
                            <button type="submit" class="btn"
                                    style="background:#2FA8A2; color:#fff; border-radius:10px;">
                                Sí, eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
