@model SantaRamona.Backoffice.Models.Animal
@{
    ViewData["Title"] = "Agregar nuevo animal";
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        AGREGAR NUEVO ANIMAL
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <a asp-action="Index" class="btn" style="border:1px solid #fff; color:#fff; border-radius:10px;">← Volver al listado</a>
            <div class="d-flex gap-2">
                <button type="submit" form="form-crear" class="btn"
                        style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.5rem 1.25rem;">
                    Guardar
                </button>
                <a asp-action="Index" class="btn"
                   style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.5rem 1.25rem;">
                    Cancelar
                </a>
            </div>
        </div>

        <div class="card-body">
            <form id="form-crear" asp-action="Crear" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="edad" class="form-label">Edad (años)</label>
                        <input asp-for="edad" class="form-control" type="number" min="0" max="40" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Especie</label>
                        <select asp-for="id_especie" asp-items="ViewBag.Especies" class="form-select"></select>
                        <span asp-validation-for="id_especie" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Raza</label>
                        <select asp-for="id_raza" asp-items="ViewBag.Razas" class="form-select"></select>
                        <span asp-validation-for="id_raza" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Tamaño</label>
                        <select asp-for="id_tamano" asp-items="ViewBag.Tamanos" class="form-select"></select>
                        <span asp-validation-for="id_tamano" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <select asp-for="id_estadoAnimal" asp-items="ViewBag.Estados" class="form-select"></select>
                        <span asp-validation-for="id_estadoAnimal" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="historia" class="form-label">Historia</label>
                        <textarea asp-for="historia" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="historia" class="text-danger"></span>
                    </div>

                    <!-- Opcionales -->
                    <div class="col-md-6">
                        <label asp-for="id_persona" class="form-label">Persona (opcional)</label>
                        <input asp-for="id_persona" class="form-control" type="number" min="1" />
                        <span asp-validation-for="id_persona" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="id_pension" class="form-label">Pensión (opcional)</label>
                        <input asp-for="id_pension" class="form-control" type="number" min="1" />
                        <span asp-validation-for="id_pension" class="text-danger"></span>
                    </div>

                    <!-- Por ahora fijo (hasta tener auth). Si tu POST valida id_usuario, dejá este hidden. -->
                    <input type="hidden" asp-for="id_usuario" value="1" />
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>
</div>
