@model IEnumerable<SantaRamona.Backoffice.Models.Raza>
@{
    await Html.RenderPartialAsync("_AnimalTopNav");
}

@{
    ViewData["Title"] = "Lista de Razas";
}

<div class="container mt-4">
    <h1 class="text-center fw-bold" style="color:#2FA8A2; letter-spacing:.5px;">
        LISTA DE RAZAS
    </h1>

    @if (ViewBag.Ok != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#E6F6F5; border:1px solid #2FA8A2; color:#155e59; border-radius:10px;">
            @ViewBag.Ok
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="alert mt-3" role="alert"
             style="background:#fff3f3; border:1px solid #d9534f; color:#a94442; border-radius:10px;">
            @ViewBag.ApiError
        </div>
    }

    <div class="card shadow-sm mt-3" style="border:1px solid #2FA8A2; border-radius:14px;">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background:#2FA8A2; color:#fff; border-top-left-radius:14px; border-top-right-radius:14px;">
            <strong>Razas</strong>
            <a asp-action="Crear" class="btn"
               style="background:#fff; color:#2FA8A2; border:1px solid #fff; border-radius:10px; padding:.4rem 1rem;">
                Agregar Nueva Raza
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table mb-0">
                <thead>
                    <tr style="background:#E6F6F5; color:#155e59;">
                        <th style="border-top-left-radius:10px;">Código</th>
                        <th>Descripción</th>
                        <th class="text-end" style="border-top-right-radius:10px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_raza</td>
                                <td>@item.raza</td>
                                <td class="text-end">
                                    <a asp-action="Modificar" asp-route-id="@item.id_raza"
                                       class="btn btn-sm"
                                       style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.35rem .8rem; margin-right:.25rem;">
                                        Modificar
                                    </a>
                                    <a asp-action="Eliminar" asp-route-id="@item.id_raza"
                                       class="btn btn-sm"
                                       style="background:#2FA8A2; color:#fff; border-radius:10px; padding:.35rem .8rem;">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted p-4">No hay razas cargadas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
