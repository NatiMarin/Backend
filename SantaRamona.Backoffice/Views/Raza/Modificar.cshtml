@model SantaRamona.Backoffice.Models.Raza
@{
    ViewData["Title"] = "Razas";
}
<style>
    .main-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: 'Segoe UI',sans-serif;
    }

    .form-title {
        text-align: center;
        color: #7C4EBB;
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .btn-submit, .btn-cancel {
        background: #7C4EBB;
        color: #fff;
        padding: .5rem 1rem;
        font-size: 1rem;
        border: none;
        border-radius: .5rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color .3s;
        display: inline-block
    }

        .btn-submit:hover, .btn-cancel:hover {
            background: #5b3b99
        }

    .summary-errors {
        color: #d9534f;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .raza-card {
        background: #fff;
        border: 2px solid #7C4EBB;
        border-radius: .5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,.1);
        overflow: hidden
    }

    .raza-card-header {
        background: #7C4EBB;
        color: #fff;
        padding: 1rem;
        font-weight: 700;
        letter-spacing: .5px
    }

    .raza-card-body {
        padding: 1rem
    }

    .form-group {
        margin-bottom: 1rem
    }

    .form-label {
        display: block;
        margin-bottom: .35rem;
        color: #333;
        font-weight: 600
    }

    .form-control {
        width: 100%;
        padding: .6rem .75rem;
        font-size: 1rem;
        border: 1px solid #e0e0e0;
        border-radius: .5rem;
        outline: none
    }

        .form-control:focus {
            border-color: #7C4EBB;
            box-shadow: 0 0 0 3px rgba(124,78,187,.15)
        }

    .actions-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem
    }

    .link-back {
        background: #fff;
        border: 1px solid #7C4EBB;
        color: #7C4EBB;
        padding: .5rem .85rem;
        border-radius: .5rem;
        text-decoration: none;
        display: inline-flex;
        gap: .5rem;
        align-items: center;
        transition: background-color .2s,color .2s
    }

        .link-back:hover {
            background: #F4ECFF;
            color: #5b3b99
        }

    .alert-ok {
        background: #E6D9F8;
        color: #4C2A85;
        padding: 1rem;
        border-radius: .5rem;
        border: 1px solid #7C4EBB;
        margin-bottom: 1rem;
        font-weight: 600
    }
</style>

<div class="main-container">
    <h2 class="form-title">Modificar Raza</h2>

    @if (ViewBag.MensajeExito != null)
    {
        <div id="ok-banner" class="alert-ok">@ViewBag.MensajeExito</div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="summary-errors">@ViewBag.ApiError</div>
    }

    <div class="raza-card">
        <div class="raza-card-header">Datos de la Raza</div>
        <div class="raza-card-body">
            <form asp-action="Modificar" method="post" novalidate>
                <div class="actions-bar">
                    <a asp-controller="Raza" asp-action="Index" class="link-back">
                        <span aria-hidden="true">←</span><span>Volver al listado</span>
                    </a>
                    <div style="display:flex; gap:.5rem;">
                        <button type="submit" class="btn-submit">Guardar</button>
                        <button type="button" class="btn-cancel" onclick="showCancelModal()">Cancelar</button>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="summary-errors"></div>

                <!-- Importante: mantener el id oculto para el POST -->
                <input type="hidden" asp-for="id_raza" />

                <div class="form-group">
                    <label asp-for="raza" class="form-label">Descripción</label>
                    <input asp-for="raza" class="form-control" />
                    <span asp-validation-for="raza" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal de confirmación para Cancelar -->
    <div id="cancel-modal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%;
        background-color: rgba(0,0,0,0.5); z-index:1000; justify-content:center; align-items:center;">
        <div style="background:#fff; padding:2rem; border-radius:1rem; max-width:400px; text-align:center; box-shadow:0 0 10px rgba(0,0,0,0.3); margin:auto;">
            <p style="font-size:1.2rem; margin-bottom:1.5rem; color:#4C2A85;">
                ¿Realmente desea cancelar la modificación?
            </p>
            <div style="display:flex; justify-content:center; gap:1rem;">
                <button onclick="confirmCancelYes()" class="btn-submit">Sí</button>
                <button onclick="closeCancelModal()" class="btn-submit" style="background-color:#aaa;">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function showCancelModal() { document.getElementById('cancel-modal').style.display = 'flex'; }
        function closeCancelModal() { document.getElementById('cancel-modal').style.display = 'none'; }
        function confirmCancelYes() { window.location.href = "@Url.Action("Index", "Raza")"; }

        setTimeout(() => { const b = document.getElementById('ok-banner'); if (b) b.style.display = 'none'; }, 3500);
    </script>
}

