@model IEnumerable<SantaRamona.Backoffice.Models.Tamano>
@{
    await Html.RenderPartialAsync("_AnimalTopNav");
}


@{
    ViewData["Title"] = "Tamaños";
}

<style>
    .main-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-title {
        text-align: center;
        color: #40ADB0;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
    }

    .styled-table {
        border-collapse: collapse;
        width: 100%;
        background-color: #fff;
        border: 2px solid #40ADB0;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .styled-table th {
            background-color: #40ADB0;
            color: white;
            padding: 1rem;
            text-align: left;
        }

        .styled-table td {
            padding: 1rem;
            border-top: 1px solid #e0e0e0;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .btn-primary, .btn-danger {
        background-color: #40ADB0;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        text-decoration: none;
        transition: filter 0.2s;
        display: inline-block;
    }

        .btn-primary:hover, .btn-danger:hover {
            filter: brightness(0.92);
        }

    .actions-cell {
        text-align: center;
        white-space: nowrap;
    }

    .actions {
        display: inline-flex;
        gap: 0.5rem;
    }

    .summary-errors {
        color: #d9534f;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .toolbar {
        display: flex;
        justify-content: flex-end;
        margin: 1rem 0;
    }

    @@media (max-width: 560px) {
        .actions {
            flex-direction: column;
        }
    }
</style>

<div class="main-container">
    <h2 class="form-title">Lista de Tamaños</h2>

    @if (TempData["Ok"] != null)
    {
        <div style="margin:.8rem 0; padding:.6rem; border:2px solid #40ADB0; background:#EAF6F6; border-radius:.5rem;">
            @TempData["Ok"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div style="margin:.8rem 0; padding:.6rem; border:2px solid #ff6b6b; background:#ffecec; border-radius:.5rem;">
            <strong>@TempData["Error"]</strong>
            @if (TempData["ApiDetail"] != null)
            {
                <div style="margin-top:.4rem; color:#555; white-space:pre-wrap;">@TempData["ApiDetail"]</div>
            }
        </div>
    }
    @if (ViewBag.ApiError != null)
    {
        <div class="summary-errors">@ViewBag.ApiError</div>
    }

    <div class="toolbar">
        <a asp-controller="Tamano" asp-action="Crear" class="btn-primary">Agregar Nuevo Tamaño</a>
    </div>

    @if (Model?.Any() == true)
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th style="width:140px;">Código</th>
                    <th>Descripción</th>
                    <th style="text-align:center; width: 220px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id_tamano</td>
                        <td>@item.tamano</td>
                        <td class="actions-cell">
                            <div class="actions">
                                <a asp-controller="Tamano"
                                   asp-action="Modificar"
                                   asp-route-id="@item.id_tamano"
                                   class="btn-primary">
                                    Modificar
                                </a>

                                <a asp-controller="Tamano"
                                   asp-action="Eliminar"
                                   asp-route-id="@item.id_tamano"
                                   class="btn-primary">
                                    Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: #666;">No hay tamaños cargados.</p>
    }
</div>
